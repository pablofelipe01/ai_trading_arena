# ============================================================================
# AI Trading Arena - Environment Variables
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git (it's in .gitignore)
# ============================================================================

# ----------------------------------------------------------------------------
# Trading Configuration
# ----------------------------------------------------------------------------
TRADING_MODE=paper              # paper | live (ALWAYS start with paper!)
CAPITAL_PER_MODEL=100           # USD per model
RISK_PER_TRADE=0.02            # Max 2% risk per trade

# ----------------------------------------------------------------------------
# Exchange API Keys (Binance)
# ----------------------------------------------------------------------------
# Get from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: For paper trading, you can use read-only keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true           # Use testnet for paper trading

# ----------------------------------------------------------------------------
# LLM APIs - Tier 1 (Priority Models)
# ----------------------------------------------------------------------------

# DeepSeek - The Champion (nof1.ai winner +11.06%)
# Get from: https://platform.deepseek.com/api_keys
# Cost: ~$0.14/1M input tokens, ~$0.28/1M output tokens
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI - GPT-4 (Seeking Revenge)
# Get from: https://platform.openai.com/api-keys
# Cost: ~$10/1M input tokens, ~$30/1M output tokens for GPT-4-turbo
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic - Claude (The Professional Analyst)
# Get from: https://console.anthropic.com/settings/keys
# Cost: ~$3/1M input tokens, ~$15/1M output tokens for Claude 3 Sonnet
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Groq - Llama (The Open Source Underdog - FREE!)
# Get from: https://console.groq.com/keys
# Cost: FREE tier available (rate limited)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192

# ----------------------------------------------------------------------------
# LLM APIs - Tier 2 (Future Expansion)
# ----------------------------------------------------------------------------

# Google Gemini
# GEMINI_API_KEY=your_gemini_api_key_here

# Alibaba Qwen
# QWEN_API_KEY=your_qwen_api_key_here

# ----------------------------------------------------------------------------
# Arena Configuration
# ----------------------------------------------------------------------------
DECISION_INTERVAL=180          # Seconds between decisions (3 min like nof1.ai)
MAX_CONCURRENT_REQUESTS=4      # Parallel LLM calls
ENABLE_DEEPSEEK=true           # Priority model
ENABLE_GPT4=true
ENABLE_CLAUDE=true
ENABLE_LLAMA=true
ENABLE_GEMINI=false            # Tier 2
ENABLE_QWEN=false              # Tier 2

# ----------------------------------------------------------------------------
# Data & Prompt Configuration
# ----------------------------------------------------------------------------
PROMPT_TEMPLATE_VERSION=nof1_exact    # nof1_exact | simplified | advanced
INCLUDE_FUNDING_RATE=true
INCLUDE_OPEN_INTEREST=true
DATA_CACHE_TTL=60                     # Cache TTL in seconds

# ----------------------------------------------------------------------------
# Logging & Monitoring
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO                 # DEBUG | INFO | WARNING | ERROR
LOG_TO_FILE=true
LOG_FILE_PATH=data/logs/arena.log
ENABLE_RICH_CONSOLE=true       # Colorful terminal output

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------
PYTEST_VERBOSE=true
ENABLE_HYPOTHESIS_TESTING=true
COVERAGE_MIN_PERCENTAGE=80

# ----------------------------------------------------------------------------
# Safety & Risk Management
# ----------------------------------------------------------------------------
ENABLE_CIRCUIT_BREAKER=true
MAX_DAILY_LOSS_PERCENT=5       # Stop trading if down 5% in a day
MAX_POSITION_SIZE_PERCENT=20   # Max 20% of capital per position
ENABLE_EMERGENCY_STOP=true     # Manual emergency stop

# ----------------------------------------------------------------------------
# API Rate Limiting
# ----------------------------------------------------------------------------
BINANCE_RATE_LIMIT=1200        # Requests per minute
DEEPSEEK_RATE_LIMIT=100        # Adjust based on your tier
OPENAI_RATE_LIMIT=500
ANTHROPIC_RATE_LIMIT=50
GROQ_RATE_LIMIT=30             # Free tier is lower

# ----------------------------------------------------------------------------
# Notifications (Optional - Future)
# ----------------------------------------------------------------------------
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id
# ENABLE_TELEGRAM_ALERTS=false
